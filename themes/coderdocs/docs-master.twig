<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% if meta.title %}{{ meta.title ~ ' | '}}{% endif %}{{ site_title }}</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% if meta.description %}
    <meta name="description" content="{{ meta.description|striptags }}" />
{% endif %}
{% if meta.author %}
    <meta name="author" content="{{ meta.author }}" />
{% else %}
   <meta name="author" content="{{ site_title }}" />
{% endif %}
	<link rel="shortcut icon" href="{{ assets_url }}/{{ pages["_meta"].meta.Favicon }}" type="image/x-icon" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- FontAwesome JS-->
    <script defer src="{{ theme_url }}/assets/fontawesome/js/all.min.js"></script>

    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="{{ theme_url }}/assets/css/theme.css">

</head>

<body{% block body_class %}{% endblock body_class %}>
    <header class="header fixed-top">
	    <div class="branding docs-branding">
            <div class="container-fluid position-relative py-2">
                <div class="docs-logo-wrapper">
                    {% block toggler %}
                    {% endblock toggler %}
	                <div class="site-logo"><a class="navbar-brand" href="{{ base_url }}"><img class="logo-icon me-2" src="{{ assets_url }}/{{ pages["_meta"].meta.Logo }}" alt="{{ site_title }}"><span class="logo-text">{{ pages["_meta"].meta.LogoText_Bold }}<span class="text-alt">{{ pages["_meta"].meta.LogoText_Normal }}</span></span></a></div>
                </div><!--//docs-logo-wrapper-->
	            <div class="docs-top-utilities d-flex justify-content-end align-items-center">
	                {% block search %}
	                {% endblock search %}

					<ul class="social-list list-inline mx-md-3 mx-lg-5 mb-0 d-none d-lg-flex">
					{% block social %}
						{% for social in pages["_meta"].meta.social %}
						<a href="{{ social.url }}" title="{{ social.title }}" role="button">
							<li class="list-inline-item"><a title="{{ social.title }}" href="{{ social.url }}"><i class="fab fa-{{ social.icon }} fa-fw"></i></a></li>						
						</a>
						{% endfor %}
					{% endblock social %}
		            </ul><!--//social-list-->
		            <a href="{{ pages["_meta"].meta.HeaderButton_Link }}" class="btn btn-primary d-none d-lg-flex">{{ pages["_meta"].meta.HeaderButton_Text }}</a>
	            </div><!--//docs-top-utilities-->
            </div><!--//container-->
        </div><!--//branding-->
    </header><!--//header-->

    {% block body %}
    {% endblock body %}

    <!-- Javascript -->
    <script src="{{ theme_url }}/assets/plugins/popper.min.js"></script>
    <script src="{{ theme_url }}/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- Page Specific JS -->
    <script defer src="{{ theme_url }}/assets/plugins/smoothscroll.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.15.8/highlight.min.js"></script>
    <script src="{{ theme_url }}/assets/js/highlight-custom.js"></script>
    <script src="{{ theme_url }}/assets/plugins/simplelightbox/simple-lightbox.min.js"></script>
    <script src="{{ theme_url }}/assets/plugins/gumshoe/gumshoe.polyfills.min.js"></script>
    <script src="{{ theme_url }}/assets/js/docs.js"></script>
    
    {% block scripts %}
    {% endblock scripts %}

</body>
</html>
